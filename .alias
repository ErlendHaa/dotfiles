# File handling and moving around
alias cd..="cd .."
alias ls="ls --color=auto"
alias ll="ls -lh --color=auto"

# General
alias tree="tree -C"
alias python="python3"

alias curl="curl -w '\n'" # Add newline after response

# Reload config
if [ -n "$BASH_VERSION" ]; then
  alias reload="source ~/.bashrc"
elif [ -n "$ZSH_VERSION" ]; then
    alias reload="source ~/.zshrc"
fi

# Shorthand for editing dotfiles
alias aliases="vim $HOME/.alias"
alias bashrc="vim $HOME/.bashrc"
alias zshrc="vim $HOME/.zshrc"
alias vimrc="vim $HOME/.vimrc"
alias vimfirst="vim $HOME/.vimrc.first"
alias vimlast="vim $HOME/.vimrc.last"
alias vimplug="vim $HOME/.vimrc.plugins"
alias nviminit="vim $HOME/.config/nvim/init.lua"
alias tmuxconf="vim $HOME/.tmux.conf"
alias linuxconf="vim $HOME/.osrc.linux"
alias darwinconf="vim $HOME/.osrc.darwin"
alias localrc="vim $HOME/.localrc"

# Git
alias glog="git log --graph --color=always --format=\"%C(auto)%h%d %s %C(green)%C(bold)%cr\""

# cfg / dotfiles management
alias cfg='git --git-dir=$HOME/.cfg/ --work-tree=$HOME'

# Misc
alias ipython="ipython --TerminalInteractiveShell.editing_mode=vi"
