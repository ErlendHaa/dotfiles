# File handling and moving around
alias cd..="cd .."
alias ls="exa"      # Requires: https://github.com/ogham/exa
alias ll="ls -l"

# General
alias tree="tree -C"
alias python="python3"
alias reload="source ~/.bashrc"
alias curl="curl -w '\n'" # Add newline after response

# Shorthand for editing dotfiles
alias aliases="vim $HOME/.alias"
alias bashrc="vim $HOME/.bashrc"
alias vimrc="vim $HOME/.vimrc"
alias vimfirst="vim $HOME/.vimrc.first"
alias vimlast="vim $HOME/.vimrc.last"
alias vimplug="vim $HOME/.vimrc.plugins"

# Git
alias glog="git log --graph --color=always --format=\"%C(auto)%h%d %s %C(green)%C(bold)%cr\""
